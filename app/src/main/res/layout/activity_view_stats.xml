<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F6F9FF">

    <!-- Title -->
    <TextView
        android:id="@+id/graphTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spending by Category"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />
<!--
    Chart View
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="16dp" />
-->
    <!-- Fake Gamification Rewards -->
    <LinearLayout
        android:id="@+id/rewardsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#DFF0D8"
        android:elevation="4dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/rewardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏆 Rewards"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#3C763D"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/rewardMessage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎉 Keep up the good work meeting your budget goals!"
            android:textSize="14sp"
            android:textColor="#3C763D"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/rewardMessage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⭐ Earn badges and level up as you save more."
            android:textSize="14sp"
            android:textColor="#3C763D" />

    </LinearLayout>

</LinearLayout>
